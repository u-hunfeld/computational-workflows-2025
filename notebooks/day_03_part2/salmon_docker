FROM debian:bullseye-slim

LABEL image.author.name="yourname"
LABEL image.author.email="yourmail"

# Install dependencies
RUN apt-get update && apt-get install -y curl tar && rm -rf /var/lib/apt/lists/*

# Download and install Salmon
RUN curl -L -o /tmp/salmon.tar.gz \
    https://github.com/COMBINE-lab/salmon/releases/download/v1.5.2/salmon-1.5.2_linux_x86_64.tar.gz && \
    mkdir -p /opt/salmon && \
    tar -xzf /tmp/salmon.tar.gz -C /opt/salmon --strip-components=1 && \
    rm /tmp/salmon.tar.gz

# Set the PATH environment variable (to /usr/bin)
# this was changed a little to get salmon to work correctly
ENV PATH="/opt/salmon/bin:${PATH}"
